<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="160dp"
    android:orientation="vertical"
    android:gravity="center">

    <FrameLayout
        android:backgroundTint="@color/pinColor"
        android:background="@drawable/gray_gradint_bg"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="120dp"
        android:layout_gravity="center|end"
        android:layout_marginEnd="10dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/ic_buc_buc_logo_final" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_gravity="bottom"
            android:textSize="18dp"/>

    </FrameLayout>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="We just need your registered Email id to sent you password reset instruction."/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_text_input_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/Resetemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email Address"
            android:paddingStart="10dp"
            android:layout_margin="20dp"
            android:inputType="textEmailAddress"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/resetBtn"
        android:textSize="16dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@drawable/curved_stroke"
        android:backgroundTint="@color/colorAccent"
        android:text="Reset "/>

</LinearLayout>