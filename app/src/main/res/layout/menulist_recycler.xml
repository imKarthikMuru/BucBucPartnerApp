<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0.5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/statusSwitch"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

          <androidx.cardview.widget.CardView
              android:backgroundTint="#FFFFFF"
              android:layout_width="wrap_content"
              app:cardCornerRadius="10dp"
              android:elevation="0dp"
              android:layout_height="wrap_content">

              <ImageView
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:layout_gravity="center"
                  android:id="@+id/productPreview"
                  android:src="@drawable/logotext"/>

          </androidx.cardview.widget.CardView>



          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center_vertical"
              android:layout_marginStart="10dp"
              android:orientation="vertical">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Product Name"
                  android:textSize="16dp"
                  android:textStyle="bold"
                  android:textColor="@color/pinColor"
                  android:id="@+id/productNameTv"/>


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Category"
                  android:layout_marginTop="3dp"
                  android:textSize="14dp"
                  android:textColor="@color/material_green_700"
                  android:id="@+id/categoryTv"/>


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Price"
                  android:textSize="14dp"
                  android:textColor="@color/BannerOrangeDark"
                  android:id="@+id/priceTv"/>

<!--              <TextView-->
<!--                  android:layout_width="wrap_content"-->
<!--                  android:layout_height="wrap_content"-->
<!--                  android:text="Grams"-->
<!--                  android:textSize="14dp"-->
<!--                  android:id="@+id/GramsTv"/>-->

          </LinearLayout>

      </LinearLayout>


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:padding="2dp"
        android:id="@+id/vegMark"
        android:src="@drawable/ic_vegetarian_mark"
        android:layout_gravity="bottom|right"/>



